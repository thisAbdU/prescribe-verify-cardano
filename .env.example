# Cardano Network Configuration
# Options: "testnet" or "mainnet"
CARDANO_NETWORK=testnet

# Blockfrost API Configuration
# Get your project ID from https://blockfrost.io/
NEXT_PUBLIC_BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here
BLOCKFROST_PROJECT_ID=your_blockfrost_project_id_here

# Alternative: Koios API (if not using Blockfrost)
# KOIOS_API_URL=https://api.koios.rest/api/v0

# Prescription Validator Script Address
# This is the address where prescription UTxOs are locked
# Get this after deploying the validator script
PRESCRIPTION_VALIDATOR_SCRIPT_ADDRESS=addr_test1...

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Patient ID Hashing Salt
# ⚠️ SECURITY: Use a strong, randomly generated salt
# Store this securely and never commit to version control
PATIENT_ID_SALT=your_secure_random_salt_here

# Twilio Configuration (for SMS notifications)
# Get these from https://www.twilio.com/console
TWILIO_SID=your_twilio_account_sid
TWILIO_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# Email Configuration (for email notifications)
# Options: SendGrid, SMTP, etc.
EMAIL_PROVIDER=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password

# Admin/System Wallet (ONLY if absolutely necessary)
# ⚠️ SECURITY WARNING: This should ONLY be used for trusted system operations
# Private keys MUST be stored in HSM/KMS, never in environment variables
# Use hardware security modules and key rotation
# DO NOT use this for doctor/pharmacy wallets - they should use browser wallets
ADMIN_HOT_WALLET_KEY=

# Local Cardano Node (optional, for local development)
# Only needed if running a local Cardano node
CARDANO_NODE_SOCKET_PATH=/path/to/cardano-node.socket

# Lucid Provider URL (optional, if using custom provider)
LUCID_PROVIDER_URL=

# Notification Service Configuration
NOTIFICATIONS_SERVICE_URL=http://localhost:3001

# Indexer Service Configuration
INDEXER_POLL_INTERVAL_MS=30000

# Development/Production Environment
NODE_ENV=development
